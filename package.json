{
  "name": "offline-markdown-previewer",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others \"cd client && yarn start\" \"cd server && yarn start\"",
    "lint-staged": "lint-staged",
    "build": "cd client && SET BABEL_ENV=production && ./node_modules/.bin/webpack --config webpack.config.production.js"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint": "^3.17.0",
    "lint-staged": "^3.3.1",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
